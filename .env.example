# YouTube Data API
# 取得先: https://console.cloud.google.com/apis/credentials
YOUTUBE_API_KEY=your_api_key_here

# MySQL設定
MYSQL_HOST=mysql
MYSQL_PORT=3306
MYSQL_DATABASE=youtube_analytics
MYSQL_USER=app_user
MYSQL_PASSWORD=your_password_here
MYSQL_ROOT_PASSWORD=your_root_password_here

# MySQL接続プール設定
MYSQL_POOL_SIZE=5
MYSQL_POOL_NAME=youtube_analytics_pool

# バッチ設定
COMMENT_LIMIT=10

# YouTube API設定
# 1リクエストあたりの最大取得数（デフォルト: 100）
API_MAX_RESULTS=100
# ソート用にコメントを多めに取得する倍率（デフォルト: 2）
COMMENT_FETCH_MULTIPLIER=2

# パス設定
# ログ出力先（デフォルト: /app/logs）
LOG_DIR=/app/logs
# JSON出力先（デフォルト: /app/data/json）
JSON_OUTPUT_DIR=/app/data/json

# Sentiment Analysis設定
# ファインチューニング済みモデルを使用する場合はtrue、デフォルトモデルの場合はfalse
USE_FINETUNED_MODEL=false
# ファインチューニング済みモデルのパス（プロジェクトルートからの相対パス）
FINETUNED_MODEL_PATH=./models/sentiment-finetuned
# 日本語感情分析モデル（3クラス: positive/neutral/negative）
SENTIMENT_MODEL=christian-phu/bert-finetuned-japanese-sentiment
